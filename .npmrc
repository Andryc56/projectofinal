# Basic npm configuration
registry=https://registry.npmjs.org/
strict-ssl=false

# Network and cache settings
prefer-offline=false
fetch-retries=5
fetch-timeout=300000

# Package settings
legacy-peer-deps=true
package-lock=true
engine-strict=true

# Security settings
audit=false
fund=false
update-notifier=false

# Performance settings
prefer-dedupe=true

# Disable package-lock.json verification
package-lock-only=false

# Disable package-lock.json generation
package-lock=false

# Disable scripts for security
ignore-scripts=true

# Disable package verification
sign-git-tag=false

# Disable package-lock.json updates
save=false
update-notifier=false
